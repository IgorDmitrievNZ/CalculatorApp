<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyleDarkGray" parent="AppTheme">
        <item name="android:backgroundTint">@color/dark_gray_color</item>
        <item name="android:textColor">@color/simple_white</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/stroke_with</item>
        <item name="strokeColor">@color/text_view_color</item>
    </style>

    <style name="ButtonStyleLightGray" parent="ButtonStyleDarkGray">
        <item name="android:backgroundTint">@color/light_gray_color</item>
        <item name="android:textColor">@color/simple_black</item>
    </style>

    <style name="ButtonStyleOrange" parent="ButtonStyleDarkGray">
        <item name="android:backgroundTint">@color/orange_color</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="android:textColor">@color/text_view_color</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:padding">@dimen/padding_10</item>
    </style>

    <style name="EditTextStyle" parent="TextViewStyle">
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/text_view_color</item>
        <item name="android:textColorHint">@color/text_view_color</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#212121</item>
    </style>

</resources>
